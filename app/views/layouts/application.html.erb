<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mini Social Network</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container">
      <ul class="menu">
        <li><%= link_to 'Feed', root_path %>
        <li><%= link_to 'Meus amigos', '#' %></li>
        <li><%= link_to 'Encontrar pessoas', '#' %>
        <li><%= link_to 'Meu perfil', user_path(current_user) %></li>
        <li><%= link_to 'Editar minha conta', edit_user_registration_path %></li>
        <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
      </ul>

      <hr />

      <%= yield %>
    </div>

    <%= javascript_include_tag 'application' %>

    <%= yield :bottom_js %>

    <script>
      $(function(){
        var notice = "<%= flash[:notice] %>"
        $.notify(notice, "success" );

        var alert = "<%= flash[:alert] %>"
        $.notify(alert, "error" );
       });
    </script>
  </body>
</html>
